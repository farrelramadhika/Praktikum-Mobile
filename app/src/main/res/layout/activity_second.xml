<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context="com.example.android.studycase.SecondActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize="22dp"
        android:textColor="@android:color/black"
        android:text="Makan Malam" />

    <TextView
        android:id="@+id/textView_tempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="Eatbus"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_tempat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Menu"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Nasi Uduk"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/textView_menu"
        android:layout_marginTop="45dp"
        android:text="Porsi"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_porsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="2"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_porsi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Harga"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_tempat"
        android:layout_alignStart="@+id/textView_tempat"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="23dp"
        android:text="60000"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
</RelativeLayout>